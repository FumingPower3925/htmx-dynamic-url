{
    "name": "htmx-dynamic-url",
    "version": "1.0.0",
    "description": "HTMX extension to allow dynamic URL path templating based on JavaScript variables or store values.",
    "main": "src/dynamic-url.js",
    "type": "module",
    "scripts": {
      "test": "npm run test:v1 && npm run test:v2",
  
      "test:v1": "cross-env HTMX_VERSION=v1 karma start karma.conf.cjs --single-run",
      "test:watch:v1": "cross-env HTMX_VERSION=v1 karma start karma.conf.cjs",
  
      "test:v2": "cross-env HTMX_VERSION=v2 karma start karma.conf.cjs --single-run",
      "test:watch:v2": "cross-env HTMX_VERSION=v2 karma start karma.conf.cjs"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/FumingPower3925/htmx-dynamic-url.git"
    },
    "keywords": [
      "htmx",
      "htmx-extension",
      "url",
      "path",
      "template",
      "dynamic",
      "parameter"
    ],
    "author": "Your Name",
    "license": "BSD-2-Clause",
    "bugs": {
      "url": "https://github.com/FumingPower3925/htmx-dynamic-url/issues"
    },
    "homepage": "https://github.com/FumingPower3925/htmx-dynamic-url#readme",
    "devDependencies": {
      "chai": "^4.3.10",
      "cross-env": "^7.0.3",
      "htmx-v1": "npm:htmx.org@^1.9.12",
      "htmx-v2": "npm:htmx.org@^2.0.4",
      "karma": "^6.4.2",
      "karma-chai": "^0.1.0",
      "karma-chrome-launcher": "^3.2.0",
      "karma-mocha": "^2.0.1",
      "mocha": "^10.3.0"
    },
    "files": [
      "src/dynamic-url.js",
      "README.md",
      "LICENSE"
    ]
  }